@model IEnumerable<Proyecto6Tema2.Models.Pelicula>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <table class="table">
        <tr>
            <th>
                Codigo
            </th>
            <th>
                Titulo
            </th>
            <th>
                Director
            </th>
            <th>
                ActorPrincipal
            </th>
            <th>
                No_Actores
            </th>
            <th>
                Duracion
            </th>
            <th>
                Estreno
            </th>
            <th>
                Borrar
            </th>
            <th>
                Modificar
            </th>
        </tr>
        @foreach (var pelicula in Model)
        {
        <tr>
            <td>
                @pelicula.Codigo
            </td>
            <td>
                @pelicula.Titulo
            </td>
            <td>
                @pelicula.Director
            </td>
            <td>
                @pelicula.ActorPrincipal
            </td>
            <td>
                @pelicula.No_Actores
            </td>
            <td>
                @pelicula.Duracion
            </td>
            <td>
                @pelicula.Estreno
            </td>
            <td>
                <a href="/Home/Borrar?cod=@pelicula.Codigo">Borra?</a>
            </td>
            <td>
                <a href="/Home/Modificacion?cod=@pelicula.Codigo">Modifica?</a>
            </td>
        </tr>
        }
    </table>
    <a href="/Home/Grabar">Agregar</a>
    
</body>
</html>
